@model ProtectiveVehiclemanagementMVC.Data.Vehicle

@{
    ViewData["Title"] = "Create";
}

<h1>Add Vehicle</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VehicleNum" class="control-label"></label>
                <input asp-for="VehicleNum" class="form-control" />
                <span asp-validation-for="VehicleNum" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="VehicleType" class="control-label"></label>
                <input asp-for="VehicleType" class="form-control" />
                <span asp-validation-for="VehicleType" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="DateAdded" class="control-label"></label>
                <input asp-for="DateAdded" class="form-control" />
                <span asp-validation-for="DateAdded" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="CurrentMilage" class="control-label"></label>
                <input asp-for="CurrentMilage" class="form-control" />
                <span asp-validation-for="CurrentMilage" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="CurrentHours" class="control-label"></label>
                <input asp-for="CurrentHours" class="form-control" />
                <span asp-validation-for="CurrentHours" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="PreviousHours" class="control-label"></label>
                <input asp-for="PreviousHours" class="form-control" id="PreviousHours" onkeyup="service()"/>
                <span asp-validation-for="PreviousHours" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="NextServ" class="control-label"></label>
                <input asp-for="NextServ" class="form-control" id="NextServ" readonly/>
                <span asp-validation-for="NextServ" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="VehicleStatus" class="control-label"></label>
                <!--<input asp-for="VehicleStatus" class="form-control">-->
                <select asp-for="VehicleStatus"  class="form-control">
                    <option>Serviceable</option>
                    <option>VOR</option>
                    <option>Servicing</option>
                </select>
                <span asp-validation-for="VehicleStatus" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </form>
    </div>
</div>

<script>
    function service(){
        var PreviousHours = document.getElementById('PreviousHours').value;
        document.getElementById('NextServ').value = parseFloat(PreviousHours) + 500;
    }
</script>

